[user]
	name = Enrico Guiraud
	email = enrico.guiraud@cern.ch
[core]
	editor = vim
[alias]
	l = log --color --abbrev-commit --graph --decorate --relative-date
	lo = l --oneline
	la = l --all
	lao = la --oneline
	s = status
	sfast = status -uno
	d = diff
	c = commit --verbose
	a = add
	p = pull -p
	f = fetch -p
	compare = log --oneline --graph --cherry-pick --left-right
	r = rebase
	ri = r -i
[color]
	ui = auto
[help]
	autocorrect = 1
[push]
	default = simple
[color "diff"]
	whitespace = red reverse
[commit]
   gpgSign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = cache
[pull]
	ff = only
[init]
	templatedir = ~/.git_template
