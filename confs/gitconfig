[alias]
    l = log --color --abbrev-commit --graph --decorate --relative-date
    lao = log --color --abbrev-commit --graph --decorate --all --oneline
    lo = log --color --abbrev-commit --graph --decorate --oneline
    la = log --color --abbrev-commit --graph --decorate --relative-date --all
    s = status
    sfast = status -uno
    d = diff
    c = commit --verbose
    a = add
    p = pull -p
    f = fetch -p
	 compare = log --oneline --graph --cherry-pick --left-right
