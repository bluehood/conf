"~/.vimrc

" general settings
syntax on
set expandtab
set tabstop=2
set wildmenu
set wildmode=longest:list,full
set wildignorecase
set ignorecase
set smartcase
set secure
set nowrap
let mapleader = ","
set colorcolumn=120

" clang-format binding
map <C-K> :py3f ~/Tools/clang-format.py<cr>

"fix for slow response after Esc, O
set timeout timeoutlen=3000 ttimeoutlen=100

" let me switch away from modified buffers
set hidden
"fly between buffers
nnoremap <leader>l :ls<CR>:b<Space>
nnoremap <Leader>b :bp<CR>
nnoremap <Leader>f :bn<CR>
nnoremap <Leader>g :e#<CR>
