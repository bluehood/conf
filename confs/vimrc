"--- Vundle config start ---
set nocompatible
filetype off

"set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'vim-airline/vim-airline'
Plugin 'vim-airline/vim-airline-themes'
Plugin 'wincent/command-t'
Plugin 'bling/vim-bufferline'
Plugin 'tpope/vim-fugitive'
Plugin 'dag/vim-fish'

call vundle#end()
filetype plugin on
"--- Vundle config end ---

syntax enable
set expandtab
set tabstop=3
set shiftwidth=3
set wildmenu
set wildmode=longest:list,full
set wildignorecase
set ignorecase
set smartcase
set incsearch
set hlsearch
set secure
set nowrap
set colorcolumn=120
set autoindent
set list
set listchars=tab:!·,trail:·
set autowrite
if !has('nvim')
   set termwinkey=<C-S>
   set termwinscroll=1000000
endif
set clipboard+=unnamedplus
let mapleader = ","

" clang-format binding
map <C-K> :py3f /usr/share/clang/clang-format.py<cr>

"fix for slow response after Esc, O
set timeout timeoutlen=3000 ttimeoutlen=100

" let me switch away from modified buffers
set hidden

"fly between buffers
nnoremap <leader>n :bn<CR>
nnoremap <leader>p :bp<CR>
nnoremap <leader>d :bd<CR>
nnoremap <leader>D :bd!<CR>

nnoremap g0 :tabfirst<CR>

"Syntax highlighting for Snakefiles
au BufNewFile,BufRead Snakefile set syntax=snakemake
au BufNewFile,BufRead *.smk set syntax=snakemake

"Airline
let g:airline_powerline_fonts = 1
let g:airline_theme = "base16_bright"

"LateX mode
set wrap
set noautoindent
nnoremap <leader>m :silent mak!<CR>:redr!<CR>

"Fly between tags
"C++ has overloads, ask instead of jumping to random tags
noremap <C-]> :execute ":tjump " . expand("<cword>")<CR>
nnoremap <C-J> :tjump 

"Use xdg-open for gx
nnoremap gx :!xdg-open '<cfile>' &>/dev/null & <CR><CR>
"This should be enough, but causes weird problems
"let g:netrw_browsex_viewer= "xdg-open"

"Search
set grepprg=rg\ -Tsvg\ -Tpdf\ -n\ $*
command -nargs=+ -complete=file Grep execute 'silent grep! <args>' | copen | redraw!
nnoremap <C-F> :Grep 
nnoremap <C-S> :Grep <cword><CR>

"CommandT options
let g:CommandTFileScanner="git"
let g:CommandTWildIgnore=&wildignore . ",*.png,*.pdf"

"Use kj as <ESC>
inoremap kj <ESC>

"Use TAB to complete when typing words, else inserts TABs as usual.
"Uses dictionary and source files to find matching words to complete.

"See help completion for source,
"Note: usual completion is on <C-n> but more trouble to press all the time.
"Never type the same word twice and maybe learn a new spellings!
"Use the Linux dictionary when spelling is in doubt.
"Window users can copy the file to their machine.
function! Tab_Or_Complete()
  if col('.')>1 && strpart( getline('.'), col('.')-2, 3 ) =~ '^\w'
    return "\<C-N>"
  else
    return "\<Tab>"
  endif
endfunction
inoremap <Tab> <C-R>=Tab_Or_Complete()<CR>
